<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/audiodialog_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/audiorecord_imageicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/voice_rcd_hint" />

            <ImageView
                android:id="@+id/audiorecord_imagelevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/amp1" />
        </LinearLayout>

        <TextView
            android:id="@+id/audiorecord_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手指上滑，取消发送"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>